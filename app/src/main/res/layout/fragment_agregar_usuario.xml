<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.olave.laboratorioandroid.AgregarUsuario"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:weightSum="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        />
    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="Agregar Usuario"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/Nombre_agr_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/Nick_agr_usr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nick"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/Pass_agr_usr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="257dp"
        android:orientation="horizontal"
        android:layout_weight="0.96">

        <Button
            android:layout_marginTop="60dp"
            android:layout_marginLeft="50dp"
            android:id="@+id/add_img_user"
            android:layout_width="73dp"
            android:layout_height="73dp"
            android:background="@android:drawable/ic_input_add" />

        <ImageView
            android:layout_marginTop="15dp"
            android:id="@+id/Img_User"
            android:layout_width="165dp"
            android:layout_height="163dp"
           android:src="@drawable/ic_socios" />

    </LinearLayout>



    <Button
        android:id="@+id/Agregar_user"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Agregar"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="2dp"
        android:textSize="20dp"
        android:visibility="visible" />

</LinearLayout>
